@{
    ViewData["Title"] = "Home Page";
}

@section Scripts    {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>

    <link href="~/lib/leaflet/dist/leaflet.css" rel="stylesheet" />
    <script src="~/lib/leaflet/dist/leaflet.js"></script>
    <script src="~/js/chat.js"></script>
    <script src="~/js/mapalea.js"></script>
}

<style>
    html {
        font-size: 85%;
    }

    body {
        box-sizing: border-box;
        background-color: white;
        padding: 0;
        margin: 0;
        font-family: 'Segoe UI', 'heebo', sans-serif;
        background-color: black;
    }

    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background-color: rgb(53, 65, 99);
    }

    ::-webkit-scrollbar-thumb {
        background-color: rgb(31, 35, 46);
    }

    input::-webkit-input-placeholder {
        font-family: 'Segoe UI', sans-serif;
    }

    input::-moz-placeholder {
        font-family: 'Segoe UI', sans-serif;
    }

    .cont-usuario {
        height: 24px;
        padding: 16px;
        font-size: inherit;
        background-color: rgb(35, 42, 63);
    }

    .cont-usuario-inner {
        display: flex;
    }

        .cont-usuario-inner #txtUsuario {
            font-size: 1rem;
            width: 100%;
            flex: 3;
        }

        .cont-usuario-inner #btnM, #btnA, #btnB {
            border: none;
            background-color: transparent;
            height: 24px;
            margin-left: 8px;
            width: 100%;
            flex: 1;
            color: lightblue;
            xborder: rgb(16, 21, 73) 1px solid;
            border-radius: 4px;
            visibility: visible;
        }

        .cont-usuario-inner #btnM {
            visibility: visible;
        }

        .cont-usuario-inner #txtEstado {
            font-size: .8rem;
            background-color: transparent;
            border: none;
            color: silver;
            text-align: right;
            width: 100%;
            flex: 2;
        }

    .cont-texto {
        height: 24px;
        padding: 16px;
        font-size: inherit;
        xborder: 1px solid black;
    }

    .cont-texto-inner {
        width: 100%;
        display: inline-flex;
    }

    .cont-texto #txtTexto {
        flex: 1 1 90px;
        width: 100%;
        font-size: 1rem;
        height: 1.8rem;
        border: 1px solid silver;
        border-right: none;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }

    .cont-texto #btnEnviar {
        flex: 1 0 40px;
        max-width: 40px;
        border: none;
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
        background-color: rgb(16, 21, 73);
        color: rgb(173, 235, 247);
    }

    .contenedor {
        font-size: .9rem;
        color: black;
        background-image: linear-gradient(to bottom right, white 20%, rgb(35, 42, 63) 110% );
        max-height: 100vh;
        overflow: hidden;
    }

    .cuerpo {
        display: flex;
        flex-direction: column;
        height: calc(100vh - 112px);
        min-height: 0;
        min-width: 0;
    }

    .cont-lista-mens {
        flex: 1 0 50px;
        min-height: 50px;
        max-height: 50px;
        padding: 0 16px;
        xborder: 2px solid silver;
        border-radius: 4px;
        margin: 16px;
        background-color: rgb(35, 42, 63);
        xoverflow-y: scroll;
        transition: .3s linear;
    }

    .cont-footer {
        flex: 0 0 0px;
        min-height: 0px;
        max-height: 0px;
        border: 1px solid silver;
        padding: 16px;
        transition: 0.4s linear all;
        overflow: hidden;
        width:90%;
        xdisplay: none;
    }

    .cont-footer-inner {
        border: 1px solid black;
        /*    border-radius: 8px;
            height: 100%;
            overflow-y: scroll;*/
    }

    .lista-mens {
        list-style: none;
        padding: 0;
        overflow-y: scroll;
        height: 94%;
    }

    .msg-mensaje {
        position: relative;
        background-color: rgb(250, 248, 248);
        border-radius: 8px;
        width: 80%;
        padding: 8px;
        margin-bottom: 4px;
    }

    .msg-mensaje-c {
        background-color: silver;
        margin-left: auto;
    }

    .msg-cabecera {
        height: 24px;
    }

    .msg-nombre {
        color: rgb(12, 71, 180);
        float: left;
        font-size: .9rem;
    }

    .msg-hora {
        color: rgb(12, 71, 180);
        float: right;
        font-size: .8rem;
    }

    .msg-btn {
        color: rgb(20, 20, 20);
        float: right;
        font-size: .9rem;
        margin-left: 8px;
        border-bottom: 1px solid rgb(20, 20, 20);
        cursor: pointer;
    }

    .msg-height0 {
        max-height: 0;
    }

    .msg-height5 {
        max-height: 500px;
    }
</style>

<div class="contenedor">
    <section class="cont-usuario">
        <header>
            <div class="cont-usuario-inner">
                <input id="txtUsuario" type="text" placeholder="Nick">
                <input id="btnM" type="button" value="Mxp">
                <input id="btnA" type="button" value="Start">
                <input id="btnB" type="button" value="Stop">
                <input id="txtEstado" type="text">
            </div>
        </header>
    </section>
    <section class="cont-texto">
        <div class="cont-texto-inner">
            <input id="txtTexto" type="text" value="" placeholder="Texto">
            <input id="btnEnviar" type="button" value=">">
        </div>
    </section>
    <div class="cuerpo">
        <section class="cont-lista-mens">
            <ul id="listaMens" class="lista-mens"></ul>
        </section>
        <section class="cont-footer">
            <div id="mapid" style="height:90%;width:100%;"></div>

        </section>
    </div>

</div>

